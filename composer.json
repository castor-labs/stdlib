{
    "name": "castor/stdlib",
    "description": "The Castor Standard Library for PHP",
    "license": "MIT",
    "keywords": [
        "php",
        "php8"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Matias Navarro Carter",
            "email": "mnavarrocarter@gmail.com",
            "role": "Lead Maintainer"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "Castor\\Monorepo\\": [".castor/monorepo/src", ".castor/monorepo/tests"]
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "./*",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "castor/context": "*",
        "castor/functions": "*",
        "castor/http": "*",
        "castor/http-cgi-server": "*",
        "castor/http-client": "*",
        "castor/io": "*",
        "castor/log": "*",
        "castor/os": "*",
        "castor/random": "*",
        "castor/time": "*",
        "castor/uri": "*",
        "castor/uuid": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^5.1",
        "composer/composer": "^2.3",
        "phpbench/phpbench": "^1.2",
        "nikic/php-parser": "^4.16"
    }
}
